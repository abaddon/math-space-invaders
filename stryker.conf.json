{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/types.ts",
    "!src/vite-env.d.ts",
    "!src/main.tsx",
    "!src/App.tsx",
    "!src/components/**",
    "!src/pages/**",
    "!src/contexts/**",
    "!src/__mocks__/**"
  ],
  "testRunner": "vitest",
  "reporters": ["html", "clear-text", "progress"],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 4,
  "timeoutMS": 60000,
  "disableTypeChecks": true
}
